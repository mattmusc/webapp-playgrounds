<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <property dbms="oracle" value="false" name="autoIncrement"/>
    <property dbms="mysql" value="true" name="autoIncrement"/>

    <preConditions>
        <runningAs username="springykt"/>
    </preConditions>

    <changeSet id="000-oracle-create_sequence" author="a" dbms="oracle">
        <createSequence sequenceName="hibernate_sequence"/>
    </changeSet>

    <changeSet id="000-all-create_table-poi" author="mmuscella">
        <comment>Creates the table poi - Point of Interest</comment>
        <createTable tableName="poi">
            <column name="poi_id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" primaryKeyName="pk_poi_id"/>
            </column>
            <column name="name" type="nvarchar(128)"/>
            <column name="description" type="nvarchar(1024)"/>
            <column name="latitude" type="double"/>
            <column name="longitude" type="double"/>
            <column name="updated_at" type="timestamp"/>
            <column name="created_at" type="timestamp"/>
        </createTable>
        <rollback>
            <dropTable tableName="poi"/>
        </rollback>
    </changeSet>

</databaseChangeLog>