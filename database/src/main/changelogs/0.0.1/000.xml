<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property dbms="oracle" value="false" name="autoIncrement"/>
    <property dbms="mysql" value="true" name="autoIncrement"/>

    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <preConditions>
        <runningAs username="springykt"/>
    </preConditions>

    <changeSet id="000-oracle-create_sequence" author="mattmusc" dbms="oracle">
        <comment>Creates a sequence for Oracle DBMS</comment>
        <createSequence sequenceName="hibernate_sequence" incrementBy="1" startValue="0"/>
        <rollback>
            <dropSequence sequenceName="hibernate_sequence"/>
        </rollback>
    </changeSet>

    <changeSet id="000-all-create_table-poi" author="mattmusc">
        <comment>Creates the table poi - Point of Interest</comment>
        <createTable tableName="poi">
            <column name="poi_id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" primaryKeyName="pk_poi_id"/>
            </column>
            <column name="name" type="nvarchar(128)"/>
            <column name="description" type="nvarchar(1024)"/>
            <column name="latitude" type="double"/>
            <column name="longitude" type="double"/>
            <column name="updated_at" type="timestamp(6)"/>
            <column name="created_at" type="timestamp(6)"/>
        </createTable>
        <rollback>
            <dropTable tableName="poi"/>
        </rollback>
    </changeSet>
    
    <changeSet id="001-all-populate_poi_table_with_test_data" author="mattmusc" context="dev">
        <preConditions>
            <tableExists tableName="poi"/>
        </preConditions>
        <comment>Populate the Poi table with test data - only run in dev context</comment>
        <insert tableName="poi">
            <column name="name">Gibraltar</column>
            <column name="description">Gibraltar</column>
            <column name="latitude">50.666667</column>
            <column name="longitude">3.25</column>
            <column name="created_at" type="timestamp(6)" value="${now}"/>
            <column name="updated_at" type="timestamp(6)" value="${now}"/>
        </insert>
        <insert tableName="poi">
            <column name="name">Milano</column>
            <column name="description">IT, Milan</column>
            <column name="latitude">45.466667</column>
            <column name="longitude">9.2</column>
            <column name="created_at" type="timestamp(6)" value="${now}"/>
            <column name="updated_at" type="timestamp(6)" value="${now}"/>
        </insert>
        <insert tableName="poi">
            <column name="name">New York</column>
            <column name="description">US</column>
            <column name="latitude">35.0586111</column>
            <column name="longitude">-107.5266667</column>
            <column name="created_at" type="timestamp(6)" value="${now}"/>
            <column name="updated_at" type="timestamp(6)" value="${now}"/>
        </insert>
        <rollback>
            <delete tableName="poi"/>
        </rollback>
    </changeSet>

    <changeSet author="mattmusc" id="tag_version_0_0_1">
        <tagDatabase tag="version_0.0.1" />
    </changeSet>

</databaseChangeLog>